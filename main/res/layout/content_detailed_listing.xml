<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="top"
            android:layout_width="fill_parent"
            android:layout_height="250dp">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/scrollViewMainImg"
                        android:background="@drawable/nopicture2"
                        android:layout_width="385dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:id="@+id/scrollViewImg2"
                        android:background="@drawable/nopicture2"
                        android:layout_width="385dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:id="@+id/scrollViewImg3"
                        android:background="@drawable/nopicture2"
                        android:layout_width="385dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:id="@+id/scrollViewImg4"
                        android:background="@drawable/nopicture2"
                        android:layout_width="385dp"
                        android:layout_height="fill_parent" />

                    <ImageView
                        android:id="@+id/scrollViewImg5"
                        android:background="@drawable/nopicture2"
                        android:layout_width="385dp"
                        android:layout_height="fill_parent" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:text="Price per month"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_marginTop="140dp"
                android:background="#A6000000"
                android:id="@+id/detailedListingPrice" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/detailedListingTitle"
                android:layout_width="350dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="top"
                android:padding="10dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:lines="2"
                android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam"
                android:textSize="20dp"></TextView>

            <Button
                android:background="@drawable/detailedfavwhite"
                android:layout_marginRight="10dp"
                android:id="@+id/btnFavDetailedListing"
                android:layout_width="72dp"
                android:layout_height="70dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/detailedListingAverageRating"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:isIndicator="true"
                android:textColor="@color/hostingPrimary"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:stepSize="0.5"
                android:text="Rating Bar" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linearLayList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/hostingPrimary"
                    android:text="\u2022" />

                <TextView
                    android:id="@+id/listImgOfficeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/hostingPrimary"
                    android:text="Office Type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/hostingPrimary"
                    android:text="\u2022" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/hostingPrimary"
                    android:text="Desks Available"
                    android:id="@+id/listImgDesksAvailable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/hostingPrimary"
                    android:text="\u2022" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
            android:id="@+id/detailedListingDescription"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae dicta sunt explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit, sed quia consequuntur magni dolores eos qui ratione voluptatem sequi nesciunt. Neque porro quisquam est, qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et dolore magnam aliquam quaerat voluptatem. "
            android:textSize="17dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>

        <!-- Action Buttons Make Booking, Message & Email Host-->
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btnBookViewing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/booviewingbw" >
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnBookViewing"
                    android:clickable="false"
                    android:text="Book Viewing" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btnDetailedListingCallHost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/ic_phone_black_36dpcopy">
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnDetailedListingCallHost"
                    android:clickable="false"
                    android:text="Call Host"
                    android:id="@+id/textView3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btnDetailedListingEmailHost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/emailhostbw" >
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnDetailedListingEmailHost"
                    android:clickable="false"
                    android:text="Email Host" />
            </RelativeLayout>
        </LinearLayout>
        <!-- End of Action Buttons-->

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_height="200dp" >

            <!--<com.google.android.gms.maps.MapView-->
                <!--android:id="@+id/map_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="2"-->
                <!--/>-->

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:map="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/map"
                tools:context="finalyear.officeme.activity.MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />

        <ListView
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailedListingReviews">
        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" android:layout_marginBottom="55dp"/>

    </LinearLayout>
</ScrollView>




