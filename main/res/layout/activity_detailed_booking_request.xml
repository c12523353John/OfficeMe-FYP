<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="finalyear.officeme.activity.DetailedBookingRequest">

    <LinearLayout
        android:id="@+id/titleLinLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/detailedBookingRequestTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeDateLin"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLinLayout">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/detailedBookingRequestDate"
            android:layout_weight="1"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/detailedBookingRequestTime"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/linLayCall"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeDateLin">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailedBookingRequestCallContactButton"
            android:background="@drawable/ic_phone_black_36dpcopy"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Call User"
        android:id="@+id/detailedBookingRequestCallContactTextView"/>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linLayCall">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel Request"
            android:background="#d80909"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:id="@+id/detailedBookingRequestCancelRequestButton" />

        <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Confirm Request"
        android:id="@+id/detailedBookingRequestConfirmRequestButton"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:background="#78d809"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="13dp" />


    </LinearLayout>












</RelativeLayout>
