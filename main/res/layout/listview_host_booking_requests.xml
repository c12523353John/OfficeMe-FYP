<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listviewBookingRequestTitle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Listing Title"/>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listviewBookingRequestDate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Date: "
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/listviewBookingRequestTime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Time: "
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listviewBookingRequestBy"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Request made by: "/>

    </LinearLayout>

</LinearLayout>