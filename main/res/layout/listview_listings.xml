<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="225dp"
        android:id="@+id/relLayoutListing">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:background="@drawable/nopicture2"
            android:id="@+id/listImgImgMain"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Price per month"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_marginTop="140dp"
            android:background="#A6000000"
            android:id="@+id/listImgPrice" />


        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:id="@+id/listImgTitle"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip">

            <TextView
                android:id="@+id/listImgOfficeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="Office Type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="\u2022" />



            <TextView
                android:id="@+id/listImgCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="City" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="\u2022" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="Desks Available"
                android:id="@+id/listImgDesksAvailable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hostingPrimary"
                android:text="\u2022" />

            <RatingBar
                android:id="@+id/listImgAverageRating"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:gravity="center_horizontal"
                android:numStars="5"
                android:stepSize="0.5" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>
